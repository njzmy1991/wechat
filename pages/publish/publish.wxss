/* pages/publish/publish.wxss */
.section {
    display: flex;
}
.top {
    padding: 30rpx;
    margin-bottom: 30rpx;
    font-size: 36rpx;
    color: #696969;
}
.butween {
    flex: 1;
}
.push {
  color:#c94141;
}
.content {
    flex-direction: column;
    align-items: center;
    margin-bottom: 100rpx;
}
.text {
    width: 630rpx;
    margin-bottom: 50rpx;
    font-size: 32rpx;
}
.placeholdercss {
    color: #AAAAAA;
    font-size: 32rpx;
}
.images {
    width: 630rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.images-item {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}
.bottom {
    flex-direction: column;
    align-items: center;
}
.board-item {
    display: flex;
    width: 630rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    border-top: 2rpx solid #F0F0F0;
    border-bottom: 2rpx solid #F0F0F0;
    font-size: 38rpx;
    color:#737373;
    font-weight:blod;
}
.selected {
  line-height:22rpx;
}
.wx-switch-input {
  width:43px !important;
  height:24px !important;
}
.wx-switch-input::before {
  width:41px !important;
  height: 22px !important;
}
.wx-switch-input::after {
  width: 21px !important;
  height: 21px !important;
}