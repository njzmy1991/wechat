/**index.wxss**/
page {
    background: #f2f2f2;
}

.boards-section {
    margin-bottom: 1rpx;
    width: 100vw;
    height: 70rpx;
    background-color: #FFFFFF;
}
.boards-section ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.boards-section-content {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
}

.board-item {
    flex: 1;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 20rpx;
    min-width: 150rpx;
    text-align: center;
    font-size: 28rpx;
    color: #000;
    background: #fff;
    overflow: hidden;
}

.board-item-text {
    display: inline-block;
    height: 100%;
    box-sizing: border-box;
    padding-bottom: 2rpx;
    border-bottom: 2rpx solid #fff;
}
.scrollViewStyle {
    flex-direction: column;
    background-color: #e8e8e8;
    height: 1108rpx;
}

.noImageStyle {
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    background-color: white;
    font-size: 30rpx;
    margin: 3rpx;
    padding: 20rpx;
    line-height: 150%;
    margin-bottom: 25rpx;
}

.sourceAvatarStyle {
    display: flex;
    width: 25rpx;
    height: 25rpx;
    border-radius: 12.5rpx;
}

.noImageLowerLine {
    display: flex;
    margin-top: 20rpx;
    flex-direction: row;
    color: gray;
    align-items: center;
    font-size: 20rpx;
}

.textStyle {
    display: flex;
    margin-left: 8rpx;
}

.threeImageStyle {
    display: flex;
    flex-direction: row;
}

.threeSmallImageStyle {
    display: flex;
    width: 231rpx;
    height: 184rpx;
    padding-right: 8rpx;
}
.share{
  width: 100rpx;
  height: 50rpx;
  font-size: 20rpx;
}
.userinfo_content{
  display:flex;
  flex-direction:row;
  align-items:center;
  margin-bottom: 15rpx;
}
.touxiang{
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
}
.touxiang_right{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}
.touxiang_name{
  font-size: 30rpx;
}
.name_time{
  font-size: 20rpx;
  color: #b8b2b2;
}
.bottomView{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  border-top:1px solid #e8e8e8;
  margin-top:20rpx;

}
.bottomItemView{
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
  margin-top:12rpx;
  padding-right:10rpx;
  border-right: 1px solid #e8e8e8;
  width: 30%;

}
.bottomItemImage{
  width: 30rpx;
  height: 30rpx;
  vertical-align: -4rpx;
}
.bottomItemText{
  font-size: 32rpx;
  color: #b8b2b2;
  margin-left: 10rpx;
  margin-top: 8rpx;
}
.divLine{
  background: #f3f3f3;
  width: 100%;
  height: 15rpx;
}