/**index.wxss**/
page {
    background: #f2f2f2;
}
.community-search {
    width: 100%;
    align-items: center;
    justify-content: center;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #F4F4F4;
}
.community-search-box {
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    width: 100%;
    height: 70rpx;
    background: #FFFFFF;
}
.community-search-icon,.community-search-text {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #AAAAAA;
}
.community-search-icon {
    margin-left: 24rpx;
    margin-right: 15rpx;
}
.boards-section {
    margin-bottom: 1rpx;
    width: 100vw;
    height: 70rpx;
    background-color: #FFFFFF;
}
.boards-section ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.boards-section-content {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
}

.board-item {
    flex: 1;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 20rpx;
    min-width: 150rpx;
    text-align: center;
    font-size: 28rpx;
    color: #000;
    background: #fff;
    overflow: hidden;
}

.board-item-text {
    display: inline-block;
    height: 100%;
    box-sizing: border-box;
    padding-bottom: 2rpx;
    border-bottom: 2rpx solid #fff;
}

.posts-section {
    display: flex;
    flex-direction: column;
}

.post-item {
    margin-bottom: 20rpx;
}

.post-item-hover {
    background: rgba(255,255,255,0.1);
    opacity: 0.7;
}

.post-item--last-child {
}

.posts-items-empty {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 240rpx;
}

.posts-items-empty-icon {
    width: 98rpx;
    height: 78rpx;
    margin-bottom: 30rpx;
}

.posts-items-empty-text {
    color: #cccccc;
    font-size: 30rpx;
}

.actions-section {
    position: fixed;
    right: 30rpx;
    bottom: 70rpx;
}

.new-post-action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80rpx;
    height: 80rpx;
    padding: 0;
    border-radius: 50%;
    opacity: 0.8;
}

.new-post-action-icon {
    height: 36rpx;
    width: 36rpx;
}

.pay-dialog {
    display: none;
}

.zan-dialog--show.pay-dialog {
    display: block;
    position: relative;
    top: 200rpx;
}

.pay-dialog-container {
    position: relative;
    bottom: auto;
    width: auto;
    margin: 0 60rpx;
    border-radius: 10rpx;
    color: #555;
    font-size: 28rpx;
    padding: 45rpx 100rpx;
    transform: translateY(-200%);
}

.pay-dialog-close {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    color: #CCCCCC;
    font-size: 80rpx;
    line-height: 32rpx;
    font-weight: 100;
}

.pay-dialog-icon-wrapper {
    margin-bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.pay-dialog-icon {
    width: 170rpx;
    height: 170rpx;
}

.pay-dialog-content {
    display: flex;
    flex-flow: column;
    align-items: center;
}

.pay-dialog-title {
    margin-bottom: 20rpx;
    font-size: 32rpx;
    color: #353535;
}

.pay-dialog-text {
    color: #AAAAAA;
    font-size: 24rpx;
}

.pay-dialog-action {
    margin-top: 40rpx;
    width: 100%;
    height: 80rpx;
    color: #FFF;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #2269D8;
    border-radius: 5rpx;
}

.ban-dialog {
    display: none;
}

.zan-dialog--show.ban-dialog {
    display: block;
    position: relative;
    top: 400rpx;
}

.ban-dialog-container {
    position: relative;
    bottom: auto;
    width: auto;
    margin: 0 60rpx;
    border-radius: 10rpx;
    color: #555;
    font-size: 28rpx;
    padding: 45rpx 100rpx;
    transform: translateY(-200%);
}

.ban-dialog-close {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    color: #CCCCCC;
    font-size: 80rpx;
    line-height: 32rpx;
    font-weight: 100;
}

.ban-dialog-content {
    display: flex;
    flex-flow: column;
    align-items: center;
}

.ban-dialog-text {
    color: #353535;
    font-size: 32rpx;
}

.ban-dialog-action {
    margin-top: 40rpx;
    width: 100%;
    height: 80rpx;
    color: #FFF;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #2269D8;
    border-radius: 5rpx;
}

.extra-info-section {
    padding: 167rpx 60rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100vw;
    height: 100vh;
    background: #FFF;
    box-sizing: border-box;
}

.extra-info-icon {
    margin: 0 auto;
    width: 220rpx;
    height: 248rpx;
}

.extra-info-content {
    padding: 60rpx 0;
    color: #484848;
    font-size: 32rpx;
    line-height: 51rpx;
}

.extra-info-enter {
    width: 100%;
    height: 88rpx;
    color: #FFFFFF;
    font-size: 28rpx;
    text-align: center;
    line-height: 88rpx;
    background: #F0F0F0;
    border-radius: 5rpx;
}

button.extra-info-enter:after {
    display: none;
    border: unset;
}
.post-component {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100vw;
    min-height: 230rpx;
    background: #FFFFFF;
}

.post-component-header-form {
}

.post-component-header {
    display: flex;
    justify-content: space-between;
    align-items: top;
    padding: 30rpx 30rpx 0;
    height: 90rpx;
    line-height: 90rpx;
    color: #222222;
    background: #ffffff;
    font-size: 24rpx;
    text-align: left;
    box-sizing: content-box;
}

.post-component-header:after {
    display: none;
}

.post-component-header-user {
    display: flex;
}

.post-component-header-user-avatar {
    margin-right: 10rpx;
    overflow: hidden;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    background-color: #AAAAAA;
}

.post-component-header-user-avatar image {
    width: 90rpx;
    height: 90rpx;
}

.post-component-header-user-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    line-height: 1.5;
}

.post-component-header-user-name {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.post-component-header-user-role-tag {
    margin-left: 30rpx;
    padding: 5rpx 10rpx;
    height: 22rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 22rpx;
    background: #DB524B;
    border-radius: 5rpx;
}

.post-component-header-created-at {
    color: #AAAAAA;
    font-size: 24rpx;
}

.post-component-header-tags {
    display: flex;
    align-items: top;
}

.post-comment-header-tags-menu {
    display: flex;
    align-items: center;
    width: 40rpx;
    padding: 0 10rpx;
    height: 40rpx;
    color: #ccc;
    margin-left: 20rpx;
}

.post-comment-header-tags-menu-arrow {
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #ccc;
}

.post-component-header-tag-item {
    margin-left: 20rpx;
    padding: 0 10rpx;
    color: #2269D8;
    font-size: 20rpx;
    border: 1rpx solid #2269D8;
    border-radius: 3rpx;
    height: 38rpx;
    line-height: 38rpx;
    align-items: center;
}

.post-component-content {
    padding: 20rpx 30rpx;
    color: #222222;
    background: #ffffff;
    font-size: 24rpx;
    text-align: left;
    box-sizing: content-box;
    line-height: 1.6;
}

.post-component-content:after {
    display: none;
}

.post-component-content-text {
    color: #353535;
    font-size: 28rpx;
    word-break: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.post-component-content-images {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.post-component-content-image-one {
    width: 460rpx;
    height: 350rpx;
}

.post-component-content-image-four {
    width: 220rpx;
    height: 220rpx;
}

.post-component-content-image-four:nth-child(even) {
    margin-left: 10rpx;
    margin-right: 100rpx;
}

.post-component-content-image-four:nth-child(n+3) {
    margin-top: 10rpx;
}

.post-component-content-image-normal {
    width: 220rpx;
    height: 220rpx;
}

.post-component-content-image-normal:nth-child(3n+2),.post-component-content-image-normal:nth-child(3n+3) {
    margin-left: 10rpx;
}

.post-component-content-image-normal:nth-child(n+4) {
    margin-top: 10rpx;
}

.post-component-footer {
    display: flex;
    justify-content: space-around;
    margin: 0 20rpx;
    height: 70rpx;
    border-top: 1rpx solid #F0F0F0;
}

.post-component-footer-item {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    color: #AAAAAA;
    background-color: #fff;
    width: 200rpx;
    box-sizing: content-box;
}

.post-component-footer-item:after {
    display: none;
}

.post-component-footer-item-icon {
    margin-right: 10rpx;
    width: 28rpx;
}

.post-component-footer-item-icon image {
    display: block;
    width: 28rpx;
    height: 28rpx;
}

.post-component-footer-item-icon i {
    display: block;
    font-size: 28rpx;
    width: 28rpx;
}

.post-component-footer-item-count {
    font-size: 28rpx;
}






