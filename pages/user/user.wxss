/* pages/user/user.wxss */
page {
    background: #f2f2f2;
}
.page__bd {
    padding-bottom: 120rpx;
}
.user-header {
    height: 400rpx;
    margin-bottom: 20rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.user-header-background {
    height: 420rpx;
    position: absolute;
    width: 100%;
    top: 0;
    left: 1;
    z-index: -1;
}

.user-header-follow-btn {
    padding: 8rpx 8rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #fff;
    background-color: rgba(0,0,0,0.25);
    border-radius: 2rpx;
    position: absolute;
    top: 40rpx;
    right: 40rpx;
}

.user-header-menu {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    color: #fff;
    font-size: 24rpx;
}

.user-header-avatar {
    width: 140rpx;
    height: 140rpx;
    margin-top: 90rpx;
    display: flex;
    align-items: center;
}

.user-header-avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.user-header-name {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    margin-top: 24rpx;
    color: #fff;
    box-shadow: 0 1px 1px 0px #80000000;
}

.user-header-tag {
    margin-left: 30rpx;
    padding: 5rpx 10rpx;
    height: 22rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 22rpx;
    background: #DB524B;
    border-radius: 5rpx;
}

.user-header-follow-info {
    font-size: 24rpx;
    color: #fff;
    box-shadow: 0 1px 1px 0px #80000000;
    margin-top: 10rpx;
}

.user-header-follow-info text {
    margin: 0 4rpx;
}

.user-tab-list {
    background-color: #fff;
    height: 90rpx;
    border-bottom: 3rpx solid #F0F0F0;
    font-size: 28rpx;
    color: #353535;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.user-tab-item {
    height: 100%;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.user-tab-item-text {
    height: 100%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding-bottom: 2rpx;
    border-bottom: 2rpx solid transparent;
}
.text-border{
  border-bottom: 2rpx solid #2269D8;
  color: #2269D8;
}
.post-item {
    margin-bottom: 20rpx;
}

.post-item-hover {
    background: rgba(255,255,255,0.1);
    opacity: 0.7;
}

.empty-list-image {
    margin-top: 200rpx;
}
.action-card {
    font-size: 28rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    padding: 20rpx 30rpx;
}

.action-card-info {
    display: flex;
    align-items: center;
    margin-bottom: 18rpx;
}

.action-card-info-name {
    color: #2269D8;
    max-width: 250rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.action-card-info-created-at {
    color: #AAAAAA;
    font-size: 24rpx;
}

.action-card-info-action {
    flex: 1;
}

.action-card-content {
    color: #353535;
    margin-bottom: 20rpx;
}

.action-card-post {
    display: flex;
    height: 140rpx;
}

.action-card-post-picture {
    width: 140rpx;
    height: 140rpx;
    background-color: #D2D2D2;
}

.action-card-post-picture image {
    width: 140rpx;
    height: 140rpx;
}

.action-card-post-detail {
    flex: 1;
    background-color: #F7F7F7;
    padding: 18rpx 20rpx;
}

.action-card-post-detail-author {
    color: #353535;
    line-height: 1;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.action-card-post-detail-content {
    color: #AAAAAA;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.empty-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* .empty-list-image {
    margin-top: 485rpx;
} */

.empty-list-image image {
    max-width: 112rpx;
    max-height: 91rpx;
}

.empty-list-title {
}

.empty-list-title text {
    color: #CCCCCC;
    font-size: 30rpx;
}
.no-more {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50rpx 0;
}

.no-more-decorator {
    width: 30rpx;
    height: 1px;
    background-color: #CCCCCC;
}

.no-more-content {
    color: #CCCCCC;
    font-size: 26rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}
.post-component {
    display: flex;
    flex-direction: column;
    min-height: 230rpx;
    background: #FFFFFF;
    padding: 20rpx 40rpx;
    margin-bottom: 20rpx;
}

.post-component-header {
    display: flex;
    justify-content: space-between;
    align-items: top;
    padding: 30rpx 30rpx 0;
    height: 90rpx;
    line-height: 90rpx;
    color: #222222;
    background: #ffffff;
    font-size: 24rpx;
    text-align: left;
    box-sizing: content-box;
}

.post-component-header:after {
    display: none;
}

.post-component-header-user {
    display: flex;
}

.post-component-header-user-avatar {
    margin-right: 10rpx;
    overflow: hidden;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    background-color: #AAAAAA;
}

.post-component-header-user-avatar image {
    width: 90rpx;
    height: 90rpx;
}

.post-component-header-user-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    line-height: 1.5;
}

.post-component-header-user-name {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    margin-bottom: 10rpx;
}

.post-component-header-user-role-tag {
    margin-left: 30rpx;
    padding: 5rpx 10rpx;
    height: 22rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 22rpx;
    background: #DB524B;
    border-radius: 5rpx;
}

.post-component-header-created-at {
    font-size: 32rpx;
}

.post-component-header-tags {
    display: flex;
    align-items: top;
}

.post-comment-header-tags-menu {
    display: flex;
    align-items: center;
    width: 40rpx;
    padding: 0 10rpx;
    height: 40rpx;
    color: #ccc;
    margin-left: 20rpx;
}

.post-comment-header-tags-menu-arrow {
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #ccc;
}

.post-component-header-tag-item {
    margin-left: 20rpx;
    padding: 0 10rpx;
    color: #2269D8;
    font-size: 20rpx;
    border: 1rpx solid #2269D8;
    border-radius: 3rpx;
    height: 38rpx;
    line-height: 38rpx;
    align-items: center;
}

.post-component-content {
    padding: 20rpx 30rpx;
    color: #222222;
    background: #ffffff;
    font-size: 24rpx;
    text-align: left;
    box-sizing: content-box;
    line-height: 1.6;
}

.post-component-content:after {
    display: none;
}

.post-component-content-text {
    color: #353535;
    font-size: 28rpx;
    word-break: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.post-component-content-images {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.post-component-content-image-one {
    width: 460rpx;
    height: 350rpx;
}

.post-component-content-image-four {
    width: 220rpx;
    height: 220rpx;
}

.post-component-content-image-four:nth-child(even) {
    margin-left: 10rpx;
    margin-right: 100rpx;
}

.post-component-content-image-four:nth-child(n+3) {
    margin-top: 10rpx;
}

.post-component-content-image-normal {
    width: 220rpx;
    height: 220rpx;
}

.post-component-content-image-normal:nth-child(3n+2),.post-component-content-image-normal:nth-child(3n+3) {
    margin-left: 10rpx;
}

.post-component-content-image-normal:nth-child(n+4) {
    margin-top: 10rpx;
}

.post-component-footer {
    display: flex;
    justify-content: space-around;
    margin: 0 20rpx;
    height: 70rpx;
    border-top: 1rpx solid #F0F0F0;
}

.post-component-footer-item {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    color: #AAAAAA;
    background-color: #fff;
    width: 200rpx;
    box-sizing: content-box;
}

.post-component-footer-item:after {
    display: none;
}

.post-component-footer-item-icon {
    margin-right: 10rpx;
    width: 28rpx;
}

.post-component-footer-item-icon image {
    display: block;
    width: 28rpx;
    height: 28rpx;
}

.post-component-footer-item-icon i {
    display: block;
    font-size: 28rpx;
    width: 28rpx;
}

.post-component-footer-item-count {
    font-size: 28rpx;
}
.noImageStyle {
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    background-color: white;
    font-size: 30rpx;
    margin: 3rpx;
    padding: 20rpx;
    line-height: 150%;
    margin-bottom: 25rpx;
    margin-top: 24rpx;
}

.sourceAvatarStyle {
    display: flex;
    width: 25rpx;
    height: 25rpx;
    border-radius: 12.5rpx;
}

.noImageLowerLine {
    display: flex;
    margin-top: 20rpx;
    flex-direction: row;
    color: gray;
    align-items: center;
    font-size: 20rpx;
}

.textStyle {
    display: flex;
    margin-left: 8rpx;
}

.threeImageStyle {
    display: flex;
    flex-direction: row;
}

.threeSmallImageStyle {
    display: flex;
    width: 231rpx;
    height: 130rpx;
    padding-right: 8rpx;
}
.userinfo_content{
  display:flex;
  flex-direction:row;
  align-items:center;
  margin-bottom: 15rpx;
}
